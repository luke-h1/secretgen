{
  "name": "secretgen",
  "version": "1.0.0",
  "description": "Secret/password generator CLI",
  "main": "index.js",
  "preferGlobal": true,
  "bin": "./dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "tsc": "tsc --noEmit",
    "test": "jest",
    "gen-env": "gen-env-types .env -o src/types/env.d.ts -e .",
    "link": "npm link",
    "unlink": "npm unlink"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luke-h1/secretgen.git"
  },
  "keywords": [
    "CLI",
    "secret generator"
  ],
  "author": "luke-h1",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luke-h1/secretgen/issues"
  },
  "dependencies": {
    "clipboardy": "2.3.0",
    "commander": "9.4.0",
    "esbuild": "^0.13.12",
    "esbuild-runner": "^2.2.1",
    "pino": "8.4.2",
    "pino-pretty": "9.1.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@swc/core": "^1.2.127",
    "@swc/jest": "^0.2.15",
    "@types/jest": "^28.1.8",
    "@types/node": "^15.14.9",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "chalk": "^4.1.1",
    "eslint": "^8.22.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^12.2.5",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "gen-env-types": "^1.3.0",
    "husky": "8.0.1",
    "jest": "^27.5.1",
    "prettier": "^2.7.1",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --quiet"
    ],
    "*.{js,jsx,ts,tsx,css,scss,html}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": "global"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.test.{ts,tsx,js,jsx}",
      "<rootDir>/*.test.{ts,tsx,js,jsx}"
    ],
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest",
        {
          "sourceMaps": true,
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": true
            },
            "transform": {
              "react": {
                "runtime": "automatic"
              }
            }
          }
        }
      ]
    },
    "testEnvironment": "node"
  }
}
